// schema.prisma
generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(cuid())
  username          String        @unique
  email             String        @unique
  password          String?
  googleId          String?       @unique
  role              Role          @default(USER)
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relations
  orders            Order[]
  activityLogs      ActivityLog[]
  
  @@map("users")
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

model Voucher {
  id          String    @id @default(cuid())
  code        String    @unique
  discount    Float
  type        VoucherType
  minPurchase Float?
  maxDiscount Float?
  expiryDate  DateTime?
  maxUsage    Int?
  usageCount  Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  orders      Order[]

  @@map("vouchers")
}

enum VoucherType {
  PERCENTAGE
  FIXED
}

// Cari model Order di schema.prisma Anda, lalu update menjadi seperti ini:
model Order {
  id               String      @id @default(cuid())
  userId           String
  total            Float       @default(0)
  shippingFee      Float       @default(0)   // Pastikan ini ada
  status           OrderStatus @default(PENDING)
  shippingAddress  String?
  customerName     String?
  customerEmail    String?
  customerPhone    String?
  notes            String?
  
  // Payment fields
  paymentToken     String?
  paymentUrl       String?
  paymentStatus    String?
  paymentMethod    String?
  midtransOrderId  String?
  
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  
  // Relations
  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  voucherId        String?
  voucher          Voucher?    @relation(fields: [voucherId], references: [id])
  orderItems       OrderItem[]
  
  @@map("orders")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  COMPLETED
  CANCELLED
}


model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  action      String
  details     String?
  ipAddress   String?
  createdAt   DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("activity_logs")
}

model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@unique([email, code])
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  price       Float
  stock       Int         @default(0)
  category    String
  images      String[]    // Array of image URLs
  featured    Boolean     @default(false)
  active      Boolean     @default(true)
  rating      Float?      @default(0)
  reviewCount Int         @default(0)
  tags        String[]
  weight      Float?      // in grams
  dimensions  String?     // "LxWxH in cm"
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  orderItems  OrderItem[]
  
  @@map("products")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float   // Price at time of purchase
  
  // Relations
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
  
  @@map("order_items")
  @@unique([orderId, productId])
}

model Cart {
  id          String    @id @default(cuid())
  sessionId   String?   // Untuk guest users
  userId      String?   // Untuk logged in users
  items       Json      // JSON array of cart items
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("carts")
  @@index([sessionId])
  @@index([userId])
}